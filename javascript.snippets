endsnippet

snippet re
const ${1/(.*\/)*(\w*)(-)?(\w*)(\.[^.]*$)?(\.[^.]*$)?/$2(?4:\u$4)/} = require('$1');
endsnippet

snippet ree
const ${1:} = require('$1');
endsnippet

