snippet us "use strict" b
'use strict';
endsnippet

snippet iife
(function() {
	'use strict';

	${1}
}())
endsnippet

snippet cre "create element"
document.createElement('${1}')
endsnippet

snippet ach "append child"
${1:document.body}.appendChild($2)
endsnippet

snippet ael "addEventListener()" w
addEventListener('$1', $2)
endsnippet

snippet ede "export default" b
export default $1
endsnippet

snippet edo "export default object"
export default {
	$0
}
endsnippet

snippet edf "export default function"
