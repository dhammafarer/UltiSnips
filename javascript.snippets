	$0
}
endsnippet

snippet exf "export function"
export function $1 ($2) {
	$0
}
endsnippet

snippet exc "export constant"
export const $1 = "$1";
endsnippet

snippet ip "interpolate string" w
\`${1:}${$2}\`
endsnippet

snippet em "${}" w
${${0}}
endsnippet

#declarations
snippet cnst "constant = string"
const $1 = '$1';
endsnippet

snippet c "constant = ;"
const $1 = $0;
endsnippet

snippet let
let $1 = $0;
endsnippet

#functions
snippet f "anonymous function" w
function ($1) {
	$0
}
endsnippet

snippet fun "named function" w
